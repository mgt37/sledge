<h1>Christchurch</h1>

<style>
       #map {
        height: 600px;
        width: 90%;
       }
</style>

    <div id="map"></div>
    <script>
      function initMap(){
        // Map options
        var options = {
            zoom: 12,
            maxZoom: 16,
            minZoom: 9,
            center: {lat: -43.578, lng: 172.571},
            scrollwheel: false,
            mapTypeId: google.maps.MapTypeId.ROADMAP
            /*styles: styles*/
        }
 
        // New map
        var map = new google.maps.Map(document.getElementById('map'), options);
      
        // Array of markers
        var markers = [
            {
                coords: {lat: -43.523537, lng: 172.583923},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="http://www.canterbury.ac.nz/" target="_blank"><p>University of Canterbury - Main Campus</p></a>'
            },{
                coords: {lat: -43.521316, lng: 172.567950},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="http://www.canterbury.ac.nz/education/" target="_blank"><p>University of Canterbury - Dovedale Campus</p></a>'
            },{
                coords: {lat: -43.534545, lng: 172.626108},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="http://www.otago.ac.nz/christchurch/index.html" target="_blank"><p>University of Otago - Christchurch School of Medicine</p></a>'
            },{
                coords: {lat: -43.643684, lng: 172.467773},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="http://www.lincoln.ac.nz/" target="_blank"><p>Lincoln University</p></a>'
            },{
                coords: {lat: -43.538348, lng: 172.643586},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="http://www.ara.ac.nz/" target="_blank"><p>Ara Institute of Canterbury Christchurch - City Campus</p></a>'
            },{
                coords: {lat: -43.548947, lng: 172.662521},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="http://www.ara.ac.nz/" target="_blank"><p>Ara Institute of Canterbury - Woolston Campus</p></a>'
            },{
                coords: {lat: -43.535954, lng: 172.541315},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="https://www.sit.ac.nz/campus/Christchurch" target="_blank"><p>Southern Institute of Technology (SIT) - Christchurch</p></a>'
            },{
                coords: {lat: -43.534963, lng: 172.640379},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="http://www.tpp.ac.nz/campus/mainz-christchurch/" target="_blank"><p>Tai Poutini Polytechnic - Mainz Christchurch</p></a>'
            },{
                coords: {lat: -43.538000, lng: 172.641856},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="https://www.weltec.ac.nz/" target="_blank"><p>Wellington Institute of Technology (Weltec) - Christchurch</p></a>'
            },{
                coords: {lat: -43.537783, lng: 172.642391},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="http://www.computerpowerplus.ac.nz/" target="_blank"><p>Whitireia New Zealand - Computer Power Plus - Christchurch</p></a>'
            },{
                coords: {lat: -43.535100, lng: 172.630958},
                iconImage: '/images/mapMarkers/university.png',
                content: '<a href="https://www.dac.ac.nz/" target="_blank"><p>Design & Arts College of New Zealand</p></a>'
            }] 
            
        // Loop through markers    
        for(var i = 0; i < markers.length; i++){
          addMarker(markers[i]);
        }  
        
        //Add marker function
        function addMarker(props){
            var marker = new google.maps.Marker({
                position: props.coords,
                map: map
            });
          
            // Check for custom icon   
            if(props.iconImage){
               //Set icon image
               marker.setIcon(props.iconImage);
            }
                
            if(props.content){
                var infoWindow = new google.maps.InfoWindow({
                content: props.content 
            });
            
            marker.addListener('click', function(){
                infoWindow.open(map, marker);
            });
            
        /*var markerCluster = new MarkerClusterer(map, markers, {imagePath: '/images/mapMarkers/m1.png'});*/  <!--// CHECK THIS-->
        }
      }
    }
</script>
