<h1>Tauranga</h1>

<style>
       #map {
        height: 950px;
        width: 90%;
       }
</style>

    <div id="map"></div>
    <script>
      function initMap(){
        // Map options
        var options = {
            zoom: 15,
            maxZoom: 18,
            minZoom: 12,
            center: {lat: -37.690, lng: 176.165},
            scrollwheel: false,
            mapTypeId: google.maps.MapTypeId.ROADMAP
            /*styles: styles*/
        }
 
        // New map
        var map = new google.maps.Map(document.getElementById('map'), options);
      
        // Array of markers
        var markers = [
            {
                coords: {lat: -37.686899, lng: 176.169367},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://www.downtowntauranga.co.nz/h2o-gaming-and-sports-bar-" target="_blank"><p>H20 Gaming and Sports Bar</p></a>'
            },{
                coords: {lat: -37.682695, lng: 176.169692},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="http://www.thephoenixtauranga.co.nz/" target="_blank"><p>The Phoenix</p></a>'
            },{
                coords: {lat: -37.682402, lng: 176.169755},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://m.cornerstonepub.net.nz/" target="_blank"><p>Cornerstone Pub</p></a>'
            },{
                coords: {lat: -37.682416, lng: 176.169152},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://www.facebook.com/CitySportsBarTga" target="_blank"><p>City Sports Bar</p></a>'
            },{
                coords: {lat: -37.687777, lng: 176.165128},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="" target="_blank"><p>Harringtons Nightclub</p></a>'
            },{
                coords: {lat: -37.681691, lng: 176.169242},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="http://www.thebahamahut.co.nz/tauranga/home/" target="_blank"><p>The Bahama Hut</p></a>'
            },{
                coords: {lat: -37.687289, lng: 176.169481},
                iconImage: '/images/mapMarkers/billiard-2.png',
                content: '<a href="https://www.neighbourly.co.nz/business/martys-pool-snooker-entertainment-centre" target="_blank"><p>Martys Pool & Snooker Entertainment Centre</p></a>'
            },{
                coords: {lat: -37.686935, lng: 176.168411},
                iconImage: '/images/mapMarkers/cinema.png',
                content: '<a href="https://www.eventcinemas.co.nz/Cinema/Tauranga" target="_blank"><p>Event Cinemas</p></a>'
            },{
                coords: {lat: -37.685019, lng: 176.169430},
                iconImage: '/images/mapMarkers/cinema.png',
                content: '<a href="https://www.rialtotauranga.co.nz/" target="_blank"><p>Rialto</p></a>'
            },{
                coords: {lat: -37.701464, lng: 176.158599},
                iconImage: '/images/mapMarkers/bowling.png',
                content: '<a href="https://www.tenpintauranga.co.nz/" target="_blank"><p>Tenpin Tauranga</p></a>'
            }
            ] 
            
        // Loop through markers    
        for(var i = 0; i < markers.length; i++){
          addMarker(markers[i]);
        }  
        
        //Add marker function
        function addMarker(props){
            var marker = new google.maps.Marker({
                position: props.coords,
                map: map
            });
          
            // Check for custom icon   
            if(props.iconImage){
               //Set icon image
               marker.setIcon(props.iconImage);
            }
                
            if(props.content){
                var infoWindow = new google.maps.InfoWindow({
                content: props.content 
            });
            
            marker.addListener('click', function(){
                infoWindow.open(map, marker);
            });
            
        /*var markerCluster = new MarkerClusterer(map, markers, {imagePath: '/images/mapMarkers/m1.png'});*/  <!--// CHECK THIS-->
        }
      }
    }
</script>

