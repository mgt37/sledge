<h1>Hastings</h1>

<style>
       #map {
        height: 1000px;
        width: 90%;
       }
</style>

    <div id="map"></div>
    <script>
      function initMap(){
        // Map options
        var options = {
            zoom: 15,
            maxZoom: 18,
            minZoom: 12,
            center: {lat: -39.635, lng: 176.838},
            scrollwheel: false,
            mapTypeId: google.maps.MapTypeId.ROADMAP
            /*styles: styles*/
        }
 
        // New map
        var map = new google.maps.Map(document.getElementById('map'), options);
      
        // Array of markers
        var markers = [
            {
                coords: {lat: -39.639671, lng: 176.842235},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://www.facebook.com/Zabeels-Sports-Bar-TAB-178173912325599/"><p>Zabeels Sports Bar</p></a>'
            },{
                coords: {lat: -39.640669, lng: 176.840284},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://www.thecrubar.co.nz/"><p>The Cru Bar</p></a>'
            },{
                coords: {lat: -39.643692, lng: 176.844736},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://commonroom2017.wordpress.com/2017/07/21/live-music/"><p>Common Room</p></a>'
            },{
                coords: {lat: -39.642893, lng: 176.843744},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://www.facebook.com/bar2013hastings"><p>Bar 2013</p></a>'
            },{
                coords: {lat: -39.642394, lng: 176.844018},
                iconImage: '/images/mapMarkers/cinema.png',
                content: '<a href="https://hastings.focalpointcinema.co.nz/" target="_blank"><p>Focal Point Cinema</p></a>'
            },{
                coords: {lat: -39.624047, lng: 176.821134},
                iconImage: '/images/mapMarkers/bowling.png',
                content: '<a href="https://superstrikehastings.co.nz/" target="_blank"><p>Superstrike</p></a>'
            }
            ] 
            
        // Loop through markers    
        for(var i = 0; i < markers.length; i++){
          addMarker(markers[i]);
        }  
        
        //Add marker function
        function addMarker(props){
            var marker = new google.maps.Marker({
                position: props.coords,
                map: map
            });
          
            // Check for custom icon   
            if(props.iconImage){
               //Set icon image
               marker.setIcon(props.iconImage);
            }
                
            if(props.content){
                var infoWindow = new google.maps.InfoWindow({
                content: props.content 
            });
            
            marker.addListener('click', function(){
                infoWindow.open(map, marker);
            });
            
        /*var markerCluster = new MarkerClusterer(map, markers, {imagePath: '/images/mapMarkers/m1.png'});*/  <!--// CHECK THIS-->
        }
      }
    }
</script>
