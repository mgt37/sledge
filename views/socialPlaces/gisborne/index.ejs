<style>
       #map {
        height: 750px;
        width: 90%;
       }
</style>

    <div id="map"></div>
    <script>
      function initMap(){
        // Map options
        var options = {
            zoom: 15,
            maxZoom: 18,
            minZoom: 12,
            center: {lat: -38.666, lng: 178.022},
            scrollwheel: false,
            mapTypeId: google.maps.MapTypeId.ROADMAP
            /*styles: styles*/
        }
 
        // New map
        var map = new google.maps.Map(document.getElementById('map'), options);
      
        // Array of markers
        var markers = [
            {
                coords: {lat: -38.666275, lng: 178.022749},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="http://thejandal.kiwi/locations/gisborne" target="_blank"><p>The Jandal</p></a>'
            },{
                coords: {lat: -38.666568, lng: 178.001663},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://www.smashpalacebar.com/" target="_blank"><p>Smash Palace</p></a>'
            },{
                coords: {lat: -38.661634, lng: 178.019732},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://www.facebook.com/Shippyboom/" target="_blank"><p>Shipwreck Bar</p></a>'
            },{
                coords: {lat: -38.669714, lng: 178.030076},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://www.lonestar.co.nz/restaurants/gisborne/" target="_blank"><p>Lone Star</p></a>'
            },{
                coords: {lat: -38.667891, lng: 178.028294},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="http://therivers.co.nz/index.html" target="_blank"><p>The Rivers</p></a>'
            },{
                coords: {lat: -38.663829, lng: 178.023376},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://www.facebook.com/Brezzn/" target="_blank"><p>Brezz-N-Sports Bar</p></a>'
            },{
                coords: {lat: -38.667296, lng: 178.025212},
                iconImage: '/images/mapMarkers/dancinghall.png',
                content: '<a href="https://opening-hours.nz/0580365/Sugar_Night_Club" target="_blank"><p>Sugar Night Club</p></a>'
            },{
                coords: {lat: -38.666602, lng: 178.026444},
                iconImage: '/images/mapMarkers/cinema.png',
                content: '<a href="http://www.gisbornespecials.co.nz/odeon-theatre-gisborne-what-s-on-multiplex/" target="_blank"><p>Odeon Multiplex</p></a>'
            },{
                coords: {lat: -38.668894, lng: 178.026269},
                iconImage: '/images/mapMarkers/cinema.png',
                content: '<a href="http://www.domecinema.co.nz/" target="_blank"><p>Dome Cinema</p></a>'
            }
            ] 
            
        // Loop through markers    
        for(var i = 0; i < markers.length; i++){
          addMarker(markers[i]);
        }  
        
        //Add marker function
        function addMarker(props){
            var marker = new google.maps.Marker({
                position: props.coords,
                map: map
            });
          
            // Check for custom icon   
            if(props.iconImage){
               //Set icon image
               marker.setIcon(props.iconImage);
            }
                
            if(props.content){
                var infoWindow = new google.maps.InfoWindow({
                content: props.content 
            });
            
            marker.addListener('click', function(){
                infoWindow.open(map, marker);
            });
            
        /*var markerCluster = new MarkerClusterer(map, markers, {imagePath: '/images/mapMarkers/m1.png'});*/  <!--// CHECK THIS-->
        }
      }
    }
</script>
