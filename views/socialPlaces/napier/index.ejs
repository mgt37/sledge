<h1>Napier</h1>

<style>
       #map {
        height: 750px;
        width: 90%;
       }
</style>

    <div id="map"></div>
    <script>
      function initMap(){
        // Map options
        var options = {
            zoom: 16,
            maxZoom: 18,
            minZoom: 11,
            center: {lat: -39.492, lng: 176.914},
            scrollwheel: false,
            mapTypeId: google.maps.MapTypeId.ROADMAP
            /*styles: styles*/
        }
 
        // New map
        var map = new google.maps.Map(document.getElementById('map'), options);
      
        // Array of markers
        var markers = [
            {
                coords: {lat: -39.488028, lng: 176.916755},
                iconImage: '/images/mapMarkers/music_live.png',
                content: '<a href="http://www.cabana.net.nz/" target="_blank"><p>Cabana Bar</p></a>'
            },{
                coords: {lat: -39.489438, lng: 176.917420},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="http://monicaloves.co.nz/" target="_blank"><p>Monica Loves</p></a>'
            },{
                coords: {lat: -39.489640, lng: 176.918378},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="http://masonic.co.nz/napier-restaurants/the-rose-irish-pub/" target="_blank"><p>The Rose Irish Pub</p></a>'
            },{
                coords: {lat: -39.489004, lng: 176.917789},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="https://www.facebook.com/gufflebar/" target="_blank"><p>Guffle Bar</p></a>'
            },{
                coords: {lat: -39.488878, lng: 176.917982},
                iconImage: '/images/mapMarkers/bar_cocktail.png',
                content: '<a href="http://directmap.co.nz/napier/3959" target="_blank"><p>The Wind Sports Bar</p></a>'
            },{
                coords: {lat: -39.491523, lng: 176.915883},
                iconImage: '/images/mapMarkers/dancinghall.png',
                content: '<a href="http://monicaloves.co.nz/" target="_blank"><p>Club Rendezvous</p></a>'
            },{
                coords: {lat: -39.493548, lng: 176.913884},
                iconImage: '/images/mapMarkers/cinema.png',
                content: '<a href="https://readingcinemas.co.nz/locations/theatre/napier" target="_blank"><p>Reading Cinemas</p></a>'
            }
            ] 
            
        // Loop through markers    
        for(var i = 0; i < markers.length; i++){
          addMarker(markers[i]);
        }  
        
        //Add marker function
        function addMarker(props){
            var marker = new google.maps.Marker({
                position: props.coords,
                map: map
            });
          
            // Check for custom icon   
            if(props.iconImage){
               //Set icon image
               marker.setIcon(props.iconImage);
            }
                
            if(props.content){
                var infoWindow = new google.maps.InfoWindow({
                content: props.content 
            });
            
            marker.addListener('click', function(){
                infoWindow.open(map, marker);
            });
            
        /*var markerCluster = new MarkerClusterer(map, markers, {imagePath: '/images/mapMarkers/m1.png'});*/  <!--// CHECK THIS-->
        }
      }
    }
</script>
