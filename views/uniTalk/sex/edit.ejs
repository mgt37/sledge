<% include ../../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= sex.name %></h1>
        <div style="width: 66.667%; margin: 25px auto;">
            <form action="/uniTalk/sex/<%= sex._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Title</label>
                    <input class="form-control" type="text" name="sex[title]" value="<%= sex.title %>">
                </div>
                <div class="form-group">
                    <label>Content</label>
                    <textarea class="form-control" rows="10" name="sex[body]"><%= sex.body %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/uniTalk/sex/<%= sex._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../../partials/footer %>