<% include ../../partials/header %>

<div class="container">
    <header class="jumbotron alcoholjumbotron">
       <div class="container">
           <h1>Alcohol</h1> 
           <p>
               <a class="btn btn-primary btn-lg" href="liquor/new">Add a new topic</a>
           </p>
       </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% liquor.reverse().forEach(function(liquor){ %>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%= liquor.image %>">
                    <div class="caption">
                        <h4><%= liquor.title %></h4>
                    </div>
                    <div class="description">
                        <p><%- liquor.body.substring(0, 100) %>...</p>
                    </div>
                    <p>
                        <a href="/uniTalk/liquor/<%= liquor._id %>" class="btn btn-primary">Read topic</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>    
</div>

<% include ../../partials/footer %>