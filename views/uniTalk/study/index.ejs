<% include ../../partials/header %>

<div class="container">
    <header class="jumbotron studyjumbotron">
       <div class="container">
           <h1>Study</h1> 
           <p>
               <a class="btn btn-primary btn-lg" href="study/new">Add a new topic</a>
           </p>
       </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% study.reverse().forEach(function(study){ %>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%= study.image %>">
                    <div class="caption">
                        <h4><%= study.title %></h4>
                    </div>
                    <div class="description">
                        <p><%- study.body.substring(0, 100) %>...</p>
                    </div>
                    <p>
                        <a href="/uniTalk/study/<%= study._id %>" class="btn btn-primary">Read topic</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>    
</div>

<% include ../../partials/footer %>