<% include ../../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="thumbnail">
                <div class="caption-full">
                    <h4><a><%= study.title %></a></h4>
                    <p><%= study.body %></p>
                    <p>
                        <em>Submitted by <%= study.author.username %></em>
                    </p>
                    <% if(currentUser && study.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/uniTalk/study/<%= study._id %>/edit">Edit</a>
                        <form id="delete-form" action="/uniTalk/study/<%= study._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class= "text-right">
                    <a class="btn btn-xs btn-success" href="/uniTalk/study/<%= study._id %>/studyComments/new">Add comment</a>
                </div>
                <hr>
                <% include ../../partials/uniTalk/studyComment %>
            </div>
            <div class= "text-right">
                    <a class="btn btn-success" href="/uniTalk/study/">Return to all topics</a>
            </div>
        </div>
    </div>
</div>
<% include ../../partials/footer %>