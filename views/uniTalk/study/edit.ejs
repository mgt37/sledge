<% include ../../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= study.title %></h1>
        <div style="width: 66.667%; margin: 25px auto;">
            <form action="/uniTalk/study/<%= study._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Title</label>
                    <input class="form-control" type="text" name="study[title]" value="<%= study.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="study[image]" value="<%= study.image %>">
                </div>
                <div class="form-group">
                    <label>Content</label>
                    <textarea class="form-control" rows="10" name="study[body]"><%= study.body %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/uniTalk/study/<%= study._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../../partials/footer %>