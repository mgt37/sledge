<% include ../../../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add new comment to <%= sport.name %></h1>
        <div style="width: 66.667%; margin: 25px auto;">
            <form action="/uniTalk/sport/<%= sport._id %>/sportComments" method="POST">
                <div class="form-group">
                   <input class="form-control" type="text" name="comment[text]" placeholder="text"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/uniTalk/sport">Go Back</a>
        </div>
    </div>
</div>
<% include ../../../partials/footer %>