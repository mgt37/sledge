<% include ../../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= relationship.image %>">
                <div class="caption-full">
                    <h4><a><%= relationship.title %></a></h4>
                    <p><%= relationship.body %></p>
                    <p>
                        <em>Submitted by <%= relationship.author.username %></em>
                    </p>
                    <% if(currentUser && relationship.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/uniTalk/relationship/<%= relationship._id %>/edit">Edit</a>
                        <form id="delete-form" action="/uniTalk/relationship/<%= relationship._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class= "text-right">
                    <a class="btn btn-xs btn-success" href="/uniTalk/relationship/<%= relationship._id %>/relationshipComments/new">Add comment</a>
                </div>
                <hr>
                <% include ../../partials/uniTalk/relationshipComment %>
            </div>
            <div class= "text-right">
                    <a class="btn btn-success" href="/uniTalk/relationship/">Return to all topics</a>
            </div>
        </div>
    </div>
</div>
<% include ../../partials/footer %>