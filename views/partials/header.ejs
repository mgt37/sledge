    </head>
    <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar-collapse-1" aria-controls="bs-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Sledge</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar" id="bs-navbar-collapse-2">
                    <li class="nav-item">
                        <a class="dropdown-item" href="#">Insert</a>
                    </li>
                    <li>
                        <form class="form-inline">
                            <input class="form-control mr-sm-2" type="text" placeholder="Search">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    </li>
                    
                    
                    
                </ul>
                <ul class="nav navbar-nav navbar-right" id="bs-navbar-collapse-1">
                    <li class="nav-item">
                        <a href="/topics">Topics</a>
                    </li> 
                        <% if(!currentUser){ %>
                    <li class="nav-item">
                        <a href="/login">Login</a>
                    </li> 
                    <li class="nav-item">
                        <a href="/register">Sign Up</a>
                    </li>
                        <% } else { %>
                    <li class="nav-item">
                        <a href="#">Signed in as <%= currentUser.username %></a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout">Logout</a>
                    </li>
                        <% } %>    
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
        
        <% if(error && error.length > 0){ %>    
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %> 
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div> 
        <% } %>
    </div>
    
