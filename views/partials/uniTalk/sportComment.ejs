<% sport.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right"><%= Date();%></span>
                            <p>
                                <%= comment.text %>
                            </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                                href="/uniTalk/sport/<%= sport._id %>/sportComments/<%= comment._id %>/edit">
                                Edit
                            </a>
                            <form id="delete-form" action="/uniTalk/sport/<%= sport._id %>/sportComments/<%= comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }); %>