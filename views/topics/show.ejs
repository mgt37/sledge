<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= topic.image %>">
                <div class="caption-full">
                    <h4><a><%= topic.title %></a></h4>
                    <p><%= topic.body %></p>
                    <p>
                        <em>Submitted by <%= topic.author.username %></em>
                    </p>
                    <% if(currentUser && topic.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/topics/<%= topic._id %>/edit">Edit</a>
                        <form id="delete-form" action="/topics/<%= topic._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class= "text-right">
                    <a class="btn btn-xs btn-success" href="/topics/<%= topic._id %>/comments/new">Add comment</a>
                </div>
                <hr>
                <% topic.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                                href="/topics/<%= topic._id %>/comments/<%= comment._id %>/edit">
                                Edit
                            </a>
                            <form id="delete-form" action="/topics/<%= topic._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>