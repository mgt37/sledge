<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= topic.name %></h1>
        <div style="width: 66.667%; margin: 25px auto;">
            <form action="/topics/<%= topic._id %>?_method=PUT" method="POST">
                <div class="form-group">
                   <input class="form-control" type="text" name="topic[title]" value="<%= topic.title %>"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="topic[image]" value="<%= topic.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="topic[body]" rows="10" value="<%= topic.body %>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/topics">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>