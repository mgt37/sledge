<% include ../../../partials/header %>

<div class="container">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <a class="btn btn-info" href="/askOffer/nelsonMarlboroughRegion/index">Return to index page</a>
        <a class="btn btn-info" href="/askOffer">Return to start page</a>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <p>
            <form action="/askOffer/nelsonMarlboroughRegion/ask" method="get" class="form-inline"> <!--check the route is correct-->
                <div class="form-group">
                    <input type="text" name="search" placeholder="Nelson Marlborough Region Ask Search" class="form-control">
                    <input type="submit" value="search" class="btn btn-info">
                </div>
            </form>
        </p>
    </div>
       <div class="container">
           <h1>Ask</h1>
           <h4>Nelson Marlborough Region</h4>
       </div>
       <div class="row text-center" style="display:flex; flex-wrap: wrap;">
           <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <% if(noMatch !== null) { %>
                <h4><%= noMatch %></h4>
                <p>
                   <form action="/askOffer/nelsonMarlboroughRegion/ask" method="get" class="form-inline"> <!--check the route is correct-->
                        <div class="form-group">
                            <input type="text" name="search" placeholder="Nelson Marlborough Region Ask Search" class="form-control">
                            <input type="submit" value="search" class="btn btn-info">
                        </div>
                    </form>
                </p>
                <% } %>
            </div>
        <% nelsonMarlboroughRegionAsk.reverse().forEach(function(nelsonMarlboroughRegionAsk){ %>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="thumbnail">
                    <div class="caption">
                        <h4><%= nelsonMarlboroughRegionAsk.title %></h4>
                    </div>
                    <div class="description">
                        <p><%- nelsonMarlboroughRegionAsk.body.substring(0, 100) %>...</p>
                    </div>
                    <p>
                        <a href="/askOffer/nelsonMarlboroughRegion/ask/<%= nelsonMarlboroughRegionAsk._id %>" class="btn btn-primary">Read ask</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../../../partials/footer %>