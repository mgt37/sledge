<% include ../../../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= dunedinOffer.title %></h1>
        <div style="width: 66.667%; margin: 25px auto;">
            <form action="/askOffer/dunedin/offer/<%= dunedinOffer._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>What are you offering?</label>
                    <input class="form-control" type="text" name="dunedinOffer[title]" value="<%= dunedinOffer.title %>">
                </div>
                <div class="form-group">
                    <label>Describe the details:</label>
                    <textarea class="form-control" rows="10" name="dunedinOffer[body]"><%= dunedinOffer.body %></textarea>
                </div>
                <div class="form-group">
                    <label>What is your contact email? (Required)</label>
                    <input class="form-control" type="text" name="dunedinOffer[contactEmail]" value="<%= dunedinOffer.contactEmail %>">
                </div>
                <div class="form-group">
                    <label>How else can you be contacted? (Optional)</label>
                    <input class="form-control" type="text" name="dunedinOffer[otherContact]" value="<%= dunedinOffer.otherContact %>">
                </div>
                <div class="form-group">
                   <label>What is the hourly rate for your offer? (enter $0 if N/A)</label>
                   <input style="width: 33.333%" class="form-control" type="number" name="dunedinOffer[hourlyRate]" value="<%= dunedinOffer.hourlyRate %>" min="0.00" step="0.50"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/askOffer/dunedin/offer/<%= dunedinOffer._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../../../partials/footer %>