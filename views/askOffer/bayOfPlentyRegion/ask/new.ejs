<% include ../../../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new ask</h1>
        <div style="width: 66.667%; margin: 25px auto;">
            <form action="/askOffer/bayOfPlentyRegion/ask" method="POST">
                <div class="form-group">
                   <label>Title</label>
                   <input class="form-control" type="text" name="title" placeholder="Title"> 
                </div>
                <div class="form-group">
                    <label>Content</label>
                    <textarea class="form-control" name="body" rows="10" placeholder="Add your content here"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/askOffer/bayOfPlentyRegion/index">Go Back</a>
        </div>
    </div>
</div>
