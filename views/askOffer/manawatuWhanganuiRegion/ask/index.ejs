            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="thumbnail">
                    <div class="caption">
                        <h4><%= manawatuWhanganuiRegionAsk.title %></h4>
                    </div>
                    <div class="description">
                        <p><%- manawatuWhanganuiRegionAsk.body.substring(0, 100) %>...</p>
                    </div>
                    <p>
                        <a href="/askOffer/manawatuWhanganuiRegion/ask/<%= manawatuWhanganuiRegionAsk._id %>" class="btn btn-primary">Read ask</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

