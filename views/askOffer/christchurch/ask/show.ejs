<% include ../../../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="thumbnail">
                <div class="caption-full">
                    <h4><a><%= christchurchAsk.title %></a></h4>
                    <p><%= christchurchAsk.body %></p>
                    <p>
                        <em>Submitted by <%= christchurchAsk.author.username %></em>
                    </p>
                    <% if(currentUser && christchurchAsk.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/askOffer/christchurch/ask/<%= christchurchAsk._id %>/edit">Edit</a>
                        <form id="delete-form" action="/askOffer/christchurch/ask/<%= christchurchAsk._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                        <a class="btn btn-primary btn-sm btn-block" href="#">Send email</a>
                    <% } %>
                </div>
            </div>
            <div>
                    
            </div>
            
            <div class= "text-right">
                    <a class="btn btn-info" href="/askOffer/christchurch/ask/">Return to all asks</a>
            </div>
        </div>
    </div>
</div>
<% include ../../../partials/footer %>