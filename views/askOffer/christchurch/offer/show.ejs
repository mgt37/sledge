<% include ../../../partials/header %>
<div class="container" style="width: 66.667%;>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="thumbnail">
                
                <div class="caption-full">
                    <h3><%= christchurchOffer.title %></h3>
                    <p>Details: <%= christchurchOffer.body %></p>
                    <p>Contact email: <%= christchurchOffer.contactEmail %></p>
                    <p>Other contact information: <%= christchurchOffer.otherContact %></p>
                    <p>Hourly rate: $<%= christchurchOffer.hourlyRate %>/hour</p>
                    
                    <p><em>Submitted by <%= christchurchOffer.author.username %></em></p>
                    <% if(currentUser && christchurchOffer.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/askOffer/christchurch/offer/<%= christchurchOffer._id %>/edit">Edit</a>
                        <form id="delete-form" action="/askOffer/christchurch/offer/<%= christchurchOffer._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class= "text-right">
                    <a class="btn btn-xs btn-success" href="/askOffer/christchurch/offer/<%= christchurchOffer._id %>/christchurchOfferComments/new/">Add comment</a>
                </div>
                <hr>
                <% christchurchOffer.comments.reverse().forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right"><%= Date();%></span>
                            <p>
                                <%= comment.text %>
                            </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                                href="/askOffer/christchurch/offer/<%= christchurchOffer._id %>/christchurchOfferComments/<%= comment._id %>/edit">
                                Edit
                            </a>
                            <form id="delete-form" action="/askOffer/christchurch/offer/<%= christchurchOffer._id %>/christchurchOfferComments/<%= comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <div class= "text-right">
                    <a class="btn btn-info" href="/askOffer/christchurch/offer/">Return to all offers</a>
            </div>
        </div>
    </div>
</div>
<% include ../../../partials/footer %>