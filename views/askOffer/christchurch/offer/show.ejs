<% include ../../../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="thumbnail">
                <div class="caption-full">
                    <h4><a><%= christchurchOffer.title %></a></h4>
                    <p><%= christchurchOffer.body %></p>
                    <p>
                        <em>Submitted by <%= christchurchOffer.author.username %></em>
                    </p>
                    <% if(currentUser && christchurchOffer.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/askOffer/christchurch/offer/<%= christchurchOffer._id %>/edit">Edit</a>
                        <form id="delete-form" action="/askOffer/christchurch/offer/<%= christchurchOffer._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                        <a class="btn btn-primary btn-sm btn-block" href="#">Send email</a>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class= "text-right">
                    <a class="btn btn-xs btn-success" href="/askOffer/christchurch/offer/<%= christchurchOffer._id %>/christchurchOfferComments/new">Add comment</a>
                </div>
                <hr>
                <% christchurchOffer.comments.reverse().forEach(function(christchurchOfferComment){ %>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <strong><%= christchurchOfferComment.author.username %></strong>
                            <span class="pull-right"><%= Date.now();%></span>
                            <p>
                                <%= christchurchOfferComment.text %>
                            </p>
                        <% if(currentUser && christchurchOfferComment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                                href="/askOffer/christchurch/offer/<%= christchurchOffer._id %>/christchurchOfferComments/<%= christchurchOfferComment._id %>/edit">
                                Edit
                            </a>
                            <form id="delete-form" action="/askOffer/christchurch/offer/<%= christchurchOffer._id %>/christchurchOfferComments/<%= christchurchOfferComment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <div class= "text-right">
                    <a class="btn btn-info" href="/askOffer/christchurch/offer/">Return to all offers</a>
            </div>
        </div>
    </div>
</div>
<% include ../../../partials/footer %>