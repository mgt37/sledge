<% include ../../../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= christchurchOffer.title %></h1>
        <div style="width: 66.667%; margin: 25px auto;">
            <form action="/askOffer/christchurch/offer/<%= christchurchOffer._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>What are you offering?</label>
                    <input class="form-control" type="text" name="christchurchOffer[title]" value="<%= christchurchOffer.title %>">
                </div>
                <div class="form-group">
                    <label>Describe the details:</label>
                    <textarea class="form-control" rows="10" name="christchurchOffer[body]"><%= christchurchOffer.body %></textarea>
                </div>
                <div class="form-group">
                    <label>What is your contact email? (Required)</label>
                    <input class="form-control" type="text" name="christchurchOffer[contactEmail]" value="<%= christchurchOffer.contactEmail %>">
                </div>
                <div class="form-group">
                    <label>How else can you be contacted? (Optional)</label>
                    <input class="form-control" type="text" name="christchurchOffer[otherContact]" value="<%= christchurchOffer.otherContact %>">
                </div>
                <div class="form-group">
                   <label>What is the hourly rate for your offer? (enter $0 if N/A)</label>
                   <input style="width: 33.333%" class="form-control" type="number" name="christchurchOffer[hourlyRate]" value="<%= christchurchOffer.hourlyRate %>" min="0.00" step="0.50"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/askOffer/christchurch/offer/<%= christchurchOffer._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../../../partials/footer %>